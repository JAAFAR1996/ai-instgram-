# Environment
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://ai_sales:CHANGE_THIS_PASSWORD@postgres:5432/ai_sales_prod
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_SSL=true
POSTGRES_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_POOL_MIN=5
REDIS_POOL_MAX=15
REDIS_COMMAND_TIMEOUT=5000

# Security Configuration (CHANGE ALL VALUES)
JWT_SECRET=CHANGE_THIS_TO_STRONG_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=CHANGE_THIS_TO_32_CHAR_ENCRYPTION_KEY
BCRYPT_ROUNDS=12

# Admin Configuration
ADMIN_PHONE_NUMBER=+9647716666543
ADMIN_EMAIL=jaafarhabash@yahoo.com

# WhatsApp Business API (Meta)
WHATSAPP_ACCESS_TOKEN=YOUR_WHATSAPP_ACCESS_TOKEN
WHATSAPP_PHONE_NUMBER_ID=YOUR_PHONE_NUMBER_ID
WHATSAPP_WEBHOOK_VERIFY_TOKEN=YOUR_SECURE_VERIFY_TOKEN
WHATSAPP_API_VERSION=v18.0

# Instagram Basic Display API
INSTAGRAM_ACCESS_TOKEN=YOUR_INSTAGRAM_ACCESS_TOKEN
INSTAGRAM_APP_SECRET=YOUR_INSTAGRAM_APP_SECRET
INSTAGRAM_API_VERSION=v18.0

# AI Configuration
LLM_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.1:70b-instruct
LLM_TIMEOUT=60000
LLM_MAX_TOKENS=500
LLM_TEMPERATURE=0.7

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WEBHOOK_MAX=500

# Media Storage
MEDIA_STORAGE_PATH=/app/uploads
MEDIA_MAX_SIZE=10485760
MEDIA_ALLOWED_TYPES=image/jpeg,image/png,image/webp,video/mp4

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_SIZE=50m
LOG_MAX_FILES=10

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Production Settings
ENABLE_SWAGGER=false
ENABLE_DEBUG_ROUTES=false
ENABLE_CORS=false

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/private.key