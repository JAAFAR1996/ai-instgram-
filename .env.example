###############################################
# AI Sales Platform - Example Environment File #
###############################################

# Runtime
NODE_ENV=development
PORT=10000
BASE_URL=http://localhost:10000

# Admin UI credentials
ADMIN_USER=admin
ADMIN_PASS=change-me

# Security
JWT_SECRET=please-change-this-to-a-long-random-secret-32+
ENCRYPTION_KEY=please-change-this-32+chars
ENCRYPTION_KEY_HEX=0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f0f
INTERNAL_API_KEY=dev-internal-key
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
TRUSTED_PROXY_IPS=127.0.0.1
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:dev_password_123@localhost:5432/ai_sales_dev
DB_MAX_CONNECTIONS=20
DB_CONNECT_TIMEOUT=10000

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_RETRIES=5

# Meta/Instagram Graph API
IG_APP_ID=
IG_APP_SECRET=
META_APP_ID=
META_APP_SECRET=
IG_VERIFY_TOKEN=dev-verify-token-change-me
GRAPH_API_VERSION=v23.0
REDIRECT_URI=${BASE_URL}/auth/instagram/callback

# OpenAI configuration
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=500

# ManyChat (optional but recommended)
MANYCHAT_API_KEY=
MANYCHAT_BASE_URL=https://api.manychat.com
MANYCHAT_WEBHOOK_SECRET=

# WhatsApp (optional)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=

# Observability (optional)
SENTRY_DSN=
METRICS_ENABLED=false
