# ================================
# AI Sales Platform - Environment
# Professional Configuration
# ================================

# 🚀 Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1
TZ=Asia/Baghdad

# 🔐 Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_32_chars_minimum
ENCRYPTION_KEY=your_32_character_encryption_key_here_123
BCRYPT_ROUNDS=12

# 💾 Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ai_sales_platform
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# 🤖 AI Services
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2048
AI_TEMPERATURE=0.7
AI_SYSTEM_PROMPT="أنت مساعد ذكي للمبيعات"

# 📱 Instagram Business API
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret_here
IG_VERIFY_TOKEN=your_webhook_verify_token_here
INSTAGRAM_ACCESS_TOKEN=your_long_lived_access_token
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_business_account_id
INSTAGRAM_PAGE_ID=your_page_id

# 💬 WhatsApp Business API (Optional)
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_VERIFY_TOKEN=your_whatsapp_verify_token

# 📊 Monitoring & Logging
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=your_sentry_dsn_here

# 🔄 Queue Configuration
QUEUE_CONCURRENCY=10
QUEUE_MAX_ATTEMPTS=3
QUEUE_DELAY=5000

# 🌐 CORS & Security
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=200

# 🐳 Production Settings (Docker)
COMPOSE_PROJECT_NAME=ai-sales-platform
POSTGRES_USER=ai_sales_user
POSTGRES_PASSWORD=secure_password_here
POSTGRES_DB=ai_sales_platform